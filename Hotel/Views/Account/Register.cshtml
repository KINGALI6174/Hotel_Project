@model Hotel.Application.DTOs.SiteSide.UserRegister.UserRegisterDTO
@{
    ViewData["Title"] = "Register";
}

    <main>
        <div class="container">
            <div class="row justify-content-center align-items-center page-section ">
                <div class="col-lg-6 col-md-8 col-xl-6 login-box">
                    <div class="px-4">
                        <h5>ثبت نام</h5>
                        <form class="pt-4 login-form" method="post" asp-controller="Account" asp-action="Register">
                            <div class="row">
                                <div class="col-6">
                                    <div class="mb-3 form-group ">
                                        <input type="text" asp-for="FName" class="form-control text-start"
                                               placeholder="نام خود را وارد کنید">
                                    </div>
                                <span style="color: red" asp-validation-for="FName"></span>
                                </div>
                                <div class="col-6">
                                    <div class="mb-3 form-group ">
                                        <input type="text" asp-for="LName" class="form-control text-start"
                                               placeholder="نام خانوادگی خود را وارد کنید">
                                    </div>
                                <span style="color: red" asp-validation-for="LName"></span>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3 form-group ">
                                    <input type="tel" asp-for="NationalCode" class="form-control text-start"
                                           placeholder="شماره ملی خود را وارد کنید">
                                </div>
                                <span style="color: red" asp-validation-for="NationalCode"></span>
                            </div>
                            <div class="col-6">
                                <div class="mb-3 form-group ">
                                    <input type="tel" asp-for="PhoneNumber" class="form-control text-start"
                                           placeholder="شماره موبایل خود را وارد کنید">
                                </div>
                                <span style="color: red" asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                            <div class="mb-3 form-group ">
                                <input type="email" asp-for="Email" class="form-control text-start"
                                       placeholder="ایمیل خود را وارد کنید">
                            </div>
                        <span style="color: red" asp-validation-for="Email"></span>
                            <div class="mb-4">
                                <input asp-for="Password" type="password" class="form-control text-start" placeholder="کلمه عبور">
                            </div>
                        <span style="color: red" asp-validation-for="Password"></span>
                            <div class="mb-4">
                                <input asp-for="RePassword" type="password" class="form-control text-start" placeholder=" تکرار کلمه عبور">
                            </div>
                        <span style="color: red" asp-validation-for="RePassword"></span>
                            <span style="color: red" asp-validation-for="RePassword"></span>
                            <div class="row justify-content-between">
                                <div class="form-check ms-3 col-4 ">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        با قوانین و مقررات موافقم
                                    </label>
                                </div>
                            </div>
                            <div class="mt-4 d-grid gap-2 under-score position-relative">
                                <input type="submit" value="ثبت نام" class="btn btn-info"/>
                            </div>
                        </form>
                        <div class="row mt-4">
                            <div class="mt-4 col-6 text-end ">
                                <button class="google-btn fw-600">گوگل <i class="bi bi-google ps-1"></i></button>
                            </div>
                            <div class="mt-4 col-6 text-start ">
                                <button class="facebook-btn fw-600 ">فیسبوک <i class="bi bi-facebook ps-1 "></i></button>
                            </div>
                            <div class="mt-3 text-center fw-500 fs-7 ">
                                <p> حساب کاربری دارید؟ <a asp-controller="Account" asp-action="Login" class="register-link"> وارد شوید  </a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
