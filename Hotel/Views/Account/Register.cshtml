@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
</head>

<main>
    <div class="container">
        <div class="row justify-content-center align-items-center page-section ">
            <div class="col-lg-6 col-md-8 col-xl-6 login-box">
                <div class="px-4">
                    <h5>ثبت نام</h5>
                    <form class="pt-4 login-form">
                        <div class="mb-3 form-group ">
                            <input type="email" class="form-control text-start"
                                   placeholder="ایمیل خود را وارد کنید">
                        </div>
                        <div class="mb-4">
                            <input type="password" class="form-control text-start" placeholder="کلمه عبور">
                        </div>
                        <div class="mb-4">
                            <input type="password" class="form-control text-start" placeholder=" تکرار کلمه عبور">
                        </div>
                        <div class="row justify-content-between">
                            <div class="form-check ms-3 col-4 ">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    با قوانین و مقررات موافقم
                                </label>
                            </div>
                        </div>
                        <div class="mt-4 d-grid gap-2 under-score position-relative">
                            <button class="btn btn-block btn-outline-danger">ثبت نام</button>
                        </div>
                    </form>
                    <div class="row mt-4">
                        <div class="mt-4 col-6 text-end ">
                            <button class="google-btn fw-600">گوگل <i class="bi bi-google ps-1"></i></button>
                        </div>
                        <div class="mt-4 col-6 text-start ">
                            <button class="facebook-btn fw-600 ">فیسبوک <i class="bi bi-facebook ps-1 "></i></button>
                        </div>
                        <div class="mt-3 text-center fw-500 fs-7 ">
                            <p> حساب کاربری دارید؟ <a href="#" class="register-link"> وارد شوید  </a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


