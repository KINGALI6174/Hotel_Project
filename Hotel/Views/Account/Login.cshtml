@model Hotel.Application.DTOs.SiteSide.UserLogin.UserLoginDTO

<main>
    <div class="container">
        <div class="row justify-content-center align-items-center page-section ">
            <div class="col-lg-6 col-md-8 col-xl-6 login-box">
                <div class="px-4">
                    <h5>ورود</h5>
                    <form asp-controller="Account" asp-action="Login" method="post" class="pt-4 login-form">
                        <div class="mb-3 form-group ">
                            <input asp-for="NationalCode" type="text" class="form-control text-start"
                                   placeholder="شماره ملی خود را وارد نمایید">
                        </div>
                        <span style="color: red" asp-validation-for="NationalCode"></span>
                        <div class="mb-4">
                            <input asp-for="Password" type="password" class="form-control text-start" placeholder="کلمه عبور">
                        </div>
                        <span style="color: red" asp-validation-for="Password"></span>
                        <div class="row justify-content-between">
                            <div class="form-check ms-3 col-4 ">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    مرا به خاطر بسپار
                                </label>
                            </div>
                            <div class="form-check ms-3 col-6 ">
                                <a href="#">رمز عبور خود را فراموش کرده اید ؟</a>
                            </div>
                        </div>
                        <div class="mt-4 d-grid gap-2 under-score position-relative">
                            @*<button class="btn btn-block btn-outline-danger">ورود</button>*@
                            <input type="submit" value="ورود" class="btn btn-outline-danger" />
                        </div>
                    </form>
                    <div class="row mt-4">
                        <div class="mt-4 col-6 text-end ">
                            <button class="google-btn fw-600">گوگل <i class="bi bi-google ps-1"></i></button>
                        </div>
                        <div class="mt-4 col-6 text-start ">
                            <button class="facebook-btn fw-600 ">فیسبوک <i class="bi bi-facebook ps-1 "></i></button>
                        </div>
                        <div class="mt-3 text-center fw-500 fs-7 ">
                            <p>آیا حساب کاربری ندارید؟ <a href="#" class="register-link ">ثبت نام کنید </a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
