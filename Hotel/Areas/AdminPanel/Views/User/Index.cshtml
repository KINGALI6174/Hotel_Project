@using Hotel.Application.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Hotel.Application.DTOs.AdminSide.User.ListOfUserDTO>
@{
    ViewData["Title"] = " لیست کاربران";
}

@section Styls
    {

    <!-- DataTables -->
    <link rel="stylesheet" href="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.css">
}

@section Scripts
    {
    <!-- ./wrapper -->

    <script src="/Admin_Panel/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <!-- FastClick -->
    <script src="/Admin_Panel/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
            $('#example2').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "autoWidth": false
            });
        });
    </script>

    <script>
        function DeleteAjax(removeElementId, url) {
            Swal.fire({
                title: 'هشدار ',
                text: "آیا از انجام عملیات مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر',
            }).then((result) => {
                if (result.isConfirmed) {
                    $.get(url).then(res => {
                        if (removeElementId !== null &&
                            removeElementId !== undefined &&
                            removeElementId !== '' &&
                            res.status === "Success") {
                            console.log("Success");
                            $('[remove-ajax-item=' + removeElementId + ']').fadeOut(1000);
                        } else if (removeElementId !== null &&
                            removeElementId !== undefined &&
                            removeElementId !== '' &&
                            res.status === "Danger") {
                            console.log("Error");
                        }
                    });
                }
            });
        }
    </script>
}

<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>لیست کاربران</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">لیست کاربران</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">


                <div class="card ">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" role="grid">
                                    <thead>
                                        <tr role="row">

                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="موبایل : activate to sort column ascending">عکس پروفایل </th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="نام کاربری  : activate to sort column descending">     نام کاربری</th>

                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="موبایل : activate to sort column ascending">موبایل </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="موبایل : activate to sort column ascending">ثبت نام  </th>

                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label=" activate to sort column ascending"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd" remove-ajax-item="@item.LName">

                                                <td>
                                                    @if (string.IsNullOrEmpty(item.LName))
                                                    {
                                                        <img style="height: 50px;width: 50px;border-radius: 100% !important;" class="img-responsive rounded" src="/Images/UserAvatar/Defult.jpg" alt="upload_img">
                                                    }
                                                    else
                                                    {
                                                        <img style="height: 50px;width: 50px;border-radius: 100% !important;" class="img-responsive rounded" src="/Images/UserAvatar/@item.FName" alt="upload_img">
                                                    }
                                                </td>
                                                <td>@item.LName</td>
                                                <td>@item.PhoneNumber</td>
                                                <td>@item.CreateDate.ToShamsi()</td>

                                                <td>

                                                    <a class="btn btn-warning btn-sm waves-effect"
                                                   asp-action="EditUser"
                                                   asp-area="AdminPanel"
                                                   asp-controller="User"
                                                   asp-route-UserId="@item.LName">
                                                        <i class="glyphicon glyphicon-edit"></i>
                                                        ویرایش
                                                    </a>

                                                    <a class="btn btn-info btn-sm waves-effect"
                                                   asp-action="DetailUser"
                                                   asp-area="AdminPanel"
                                                   asp-controller="User"
                                                   asp-route-UserId="@item.LName">
                                                        <i class="glyphicon glyphicon-edit"></i>
                                                        اطلاعات
                                                    </a>

                                                    <button onclick="DeleteAjax(@item.LName, '@Url.Action("DeleteUser", "User", new {area = "AdminPanel", userId = item.ID})')" class="btn btn-danger btn-sm waves-effect">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                        حذف
                                                    </button>

                                                    <a class="btn btn-warning btn-sm waves-effect" asp-action="Delete" asp-area="AdminPanel" asp-controller="User" asp-route-id="">
                                                        <i class="glyphicon glyphicon-trash"></i>
                                                        ورود با حساب
                                                    </a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section> <!-- /.content -->
</div>