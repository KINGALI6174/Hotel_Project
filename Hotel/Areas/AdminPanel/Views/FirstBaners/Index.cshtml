@model IEnumerable<Hotel.Domain.Entities.Web.FirstBaner>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.banerTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.banerBotton)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.banerTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.banerBotton)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageName)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>